{% extends 'form_div_layout.html.twig' %}

{% block form_errors -%}
    {% if errors|length > 0 -%}
      {% if errors|length == 1 -%}
      <p class="wrong">
        {%- for error in errors -%}
          {{ error.message }}
        {%- endfor -%}
      </p>
      {% else %}
      <ul>
        {%- for error in errors -%}
          <li>{{ error.message }}</li>
        {%- endfor -%}
      </ul>
      {%- endif %}
    {%- endif %}
{%- endblock form_errors %}
