<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" role="form">
  {{ form_widget(form._token) }} 
  {% if invalid_username is defined %}
    <div class="alert alert-danger fade in">
      <a class="close" data-dismiss="alert" href="#">×</a>
      {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
    </div>
  {% endif %}

  <div class="col-left">
    <label>Ingresa tu contraseña</label>
    <label><input type="password" class="form-control form-control" placeholder="Contraseña" required="required" name="fos_user_resetting_form[new][first]" id="fos_user_resetting_form_new_first"></label>
    <label>Repite tu contraseña</label>
    <label><input type="password" class="form-control form-control" placeholder="Repetir contraseña" required="required" name="fos_user_resetting_form[new][second]" id="fos_user_resetting_form_new_second"></label>
    <label class="button"><button type="submit">GUARDAR</button></label>
  </div>

  {% if form.new.first.vars.errors|length > 0 %}
  <div style="clear:both"></div>
  <p class="wrong">{{ form_errors(form.new.first) }}</p> 
  {% endif %}
</form>
