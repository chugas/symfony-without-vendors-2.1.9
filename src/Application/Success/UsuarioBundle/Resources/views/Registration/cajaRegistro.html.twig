<p style="font-size: 18px; font-weight: bold;">REGISTRO</p>
            
<form action="{{ path('fos_user_registration_register') }}" class="registro" method="post" {{ form_enctype(formulario) }}>
  
  <ul><li>{{ form_errors(formulario) }}</li></ul>
  
  {{ form_widget(formulario._token) }}
  
  <ul>
    {{ form_errors(formulario.name) }}
    <li>Nombre {{ form_widget(formulario.name) }}</li>

    {{ form_errors(formulario.surname) }}
    <li>Apellido {{ form_widget(formulario.surname) }}</li>

    {{ form_errors(formulario.username) }}
    <li>Nickname {{ form_widget(formulario.username) }}</li>

    {{ form_errors(formulario.email) }}    
    <li>E-mail {{ form_widget(formulario.email) }}</li>

    {{ form_errors(formulario.plainPassword) }}    
    <li>{{ form_widget(formulario.plainPassword) }}</li>

    <!--<li>Repetir {#{ form_widget(formulario.plainPassword) }#}</li>-->
  </ul>

  <p class="datos">Estos datos ser√°n requeridos para ingresar a su cuenta.</p>

  <ul>    
    <li>
      {{ form_widget(formulario.country) }}
    </li>
  </ul>

  <ul>
    <li>{{ form_widget(formulario.receive_news, { 'attr': { 'style': 'width:15px' }, 'checked' : 'checked' }) }}Recibir noticias en mi mail</li>
  </ul>

  {#{ form_rest(formulario) }#}
  
  <button>REGISTRARSE</button>

</form>
