<?php

namespace Application\Success\UsuarioBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;

/**
 * Company entity
 *
 * @ORM\Entity(repositoryClass="Application\Success\UsuarioBundle\Entity\Repository\CompanyRepository")
 * @ORM\Table(name="success_company")
 */
class Company {

  /**
   * @var integer
   *
   * @ORM\Column(name="id", type="integer")
   * @ORM\Id
   * @ORM\GeneratedValue(strategy="AUTO")
   */
  protected $id;

  /**
   * @ORM\Column(name="name", type="string", length=63)
   */
  protected $name;

  //cascade ???
  /**
   * @var array
   * 
   * @ORM\OneToMany(
   *    targetEntity="Product", 
   *    mappedBy="products",
   *    cascade={"persist", "remove"}
   * )
   */
  protected $products;

  //cascade ????
  /**
   * @var array
   * 
   * @ORM\OneToMany(
   *    targetEntity="Application\Success\PortalBundle\Entity\NewsHasFiles", 
   *    mappedBy="services",
   *    cascade={"persist", "remove"}
   * )
   */
  protected $services;
  
  //protected $categories;


  /**
   * Get id
   *
   * @return int
   */
  public function getId() {
    return $this->id;
  }

  /**
   * Set id
   *
   * @param int $id
   */
  public function setId($id) {
    $this->id = $id;
  }

  /**
   * Set name
   *
   * @param string $name
   * @return Occupation
   */
  public function setName($name) {
    $this->name = $name;

    return $this;
  }

  /**
   * Get name
   *
   * @return string 
   */
  public function getName() {
    return $this->name;
  }
  
  public function __toString() {
    return $this->name;
  }

}